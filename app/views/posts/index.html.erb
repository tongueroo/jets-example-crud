<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="jets-element-to-delete">
        <td><%= post.title %></td>
        <td><%= post.photo %></td>
        <td><%= link_to 'Show', "/posts/#{post.id}" %></td>
        <td><%= link_to 'Edit', "/posts/#{post.id}/edit" %></td>
        <td><%= link_to 'Destroy', "/posts/#{post.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', "/posts/new" %>

<p>Note: These records get deleted and reseeded daily: [cleaner_job.rb](https://github.com/tongueroo/jets-example-upload/blob/master/app/jobs/cleaner_job.rb)</p>